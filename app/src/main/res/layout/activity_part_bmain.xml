<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg0"
    tools:context=".parta.PartAMain">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/partb_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B端-远程控制端"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginRight="16dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/partb_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未控制"
            android:visibility="gone"
            android:textColor="@color/red0"
            android:textSize="24sp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/partb_status"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/partb_controll_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="请求控制A端"
            android:clickable="true"
            android:background="@drawable/btn_bg_selector"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/partb_picture_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="B端相册"
            android:clickable="true"
            android:background="@drawable/btn_bg_selector"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"

            />

    </RelativeLayout>

</LinearLayout>